<%- include("upper") -%>
  <title>Add Book</title>
<%- include("middle") -%>

  <div class="container box">
    <h1>Add Book</h1>
  </div>
  <div class="box">
    <form class="" autocomplete="off" action="/add" method="post">

      <div class="row">

        <div class="col-lg-6">
        <div class="form-group">
          <label for="exampleFormControlInput1">Book Title</label>
          <input type="text" class="form-control" name="bookTitle" id="exampleFormControlInput1" placeholder="Title" required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Book Author</label>
          <input type="text" class="form-control" name="bookAuthor" id="exampleFormControlInput1" placeholder="Author" required>
        </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Book Genre</label>
          <input type="text" class="form-control" name="bookGenre" id="exampleFormControlInput1" placeholder="Genre" required>
        </div>

      <%- include("modal_add") -%>

      </div>
      <div class="col-lg-6">
        <div class="form-group">
          <label for="bookInformation">Book Information</label>
          <textarea class="form-control" id="bookInformation" name="bookInformation" rows="8" placeholder="What can you say about the book"></textarea>
          <button class="btn btn-success bottom-button" type="button" name="button" data-toggle="modal" data-target="#exampleModal">Confirm Add</button>
          <button class="btn btn-danger" type="button" name="button" onclick="history.back()">Cancel</button>
          </div>
      </div>
      </div>

    </form>
  </div>


  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>

</html>
