<%- include("upper") -%>
<title>Update Book</title>
<%- include("middle") -%>

  <div class="container box">
    <h1>Update Book</h1>
  </div>
  <div class="box">
    <form class="" autocomplete="off" action="/update" method="post">
      <input type="hidden" name="bookName" value="<%= title %>"></input>
      <div class="row">

        <div class="col-lg-6">
          <div class="form-group">
            <label for="exampleFormControlInput1">Book Title</label>
            <input type="text" class="form-control" name="bookTitle" id="exampleFormControlInput1" value="<%= title %>" required>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Book Author</label>
            <input type="text" class="form-control" name="bookAuthor" id="exampleFormControlInput1" value="<%= author %>" required>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Book Genre</label>
            <input type="text" class="form-control" name="bookGenre" id="exampleFormControlInput1" value="<%= genre %>" required>
          </div>

        </div>
        <div class="col-lg-6">
          <div class="form-group">

            <%- include("modal_update") -%>

            <input type="hidden" name="bookName" value="<%= title %>"></input>

            <label for="bookInformation">Book Information</label>
            <textarea class="form-control" id="bookInformation" name="bookInformation" rows="8"><%= info %></textarea>
            <button class="btn btn-success bottom-button" type="button" name="button" data-toggle="modal" data-target="#exampleModal">Update</button>
            <button class="btn btn-danger" type="button" name="button" onclick="history.back()">Cancel</button>
          </div>
        </div>
      </div>
    </form>
  </div>


  <%- include("lower") -%>
